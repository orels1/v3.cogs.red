{
  "version": 2,
  "name": "v3.cogs.red",
  "build": {
    "env": {
      "FONTAWESOME_NPM_AUTH_TOKEN": "@fontawesome_npm_auth_token",
      "NPM_RC": "@npmrc",
      "VUE_APP_API": "https://api.dev.cogs.red/"
    }
  },
  "routes": [
    {
      "src": "^/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "^/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "^/img/(.*)",
      "dest": "/img/$1"
    },
    {
      "src": "^/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "^/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "^/logo.png",
      "dest": "/logo.png"
    },
    {
      "src": "^/(.*).js",
      "dest": "/$1.js"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ]
}